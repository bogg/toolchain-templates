{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Password field test",
    "description": "Testing password field",
    "longDescription": "A service that visualizes a string field using a password input in its form.",
    "type": "object",
    "properties": {
        "myfield": {
            "title": "A secret field",
            "type": "string"
        }
    },
    "form": [{
        "key": "myfield",
        "type": "password"
    }],
    "actions": {
        "create": ["repo_name", "repo_url", "type", "has_issues", "myfield"],
        "update": ["repo_url", "has_issues", "myfield"]
    }
}
